@model ePizzaHub.Core.Database.Entities.Item

@{
    ViewData["Title"] = "Delete Item";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xxl-12">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Delete Confirmation</h5>
                <a asp-action="ItemList" asp-controller="Home" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left-square"></i>
                </a>
            </div>
            <div class="card-body">
                <h4>Are you sure you want to delete this item?</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">@Model.UnitPrice</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Model.Category?.Name</dd>

                    <dt class="col-sm-3">Item Type</dt>
                    <dd class="col-sm-9">@Model.ItemType?.Name</dd>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <dt class="col-sm-3">Image</dt>
                        <dd class="col-sm-9">
                            <img src="@Model.ImageUrl" alt="Item Image" style="max-height:100px;" />
                        </dd>
                    }
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-end gap-2">
                <form asp-action="DeleteConfirmed" method="post">
                    @Html.HiddenFor(model => model.Id)
                    <button type="submit" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash me-1"></i> DELETE
                    </button>
                </form>
                <a asp-action="ItemList" asp-controller="Home" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-x-circle me-1"></i> CANCEL
                </a>
            </div>
        </div>
    </div>
</div>
