@using ePizzaHub.Core.Database.Entities
@model Item
@{
    ViewData["Title"] = "NewItem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div class="row">
    <div class="col-xxl-12">
        <div class="card mb-4" style="text-align: left !important;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Create Item</h5>
                <a asp-action="ItemList" asp-controller="Home" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-arrow-left-square"></i>
                </a>
            </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" placeholder="Name" />
                                <label asp-for="Name"></label>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="form-floating">
                                <input asp-for="UnitPrice" class="form-control" placeholder="Unit Price" />
                                <label asp-for="UnitPrice"></label>
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <div class="form-floating">
                                <input asp-for="CreatedDate" type="date" class="form-control" placeholder="Created Date" />
                                <label asp-for="CreatedDate"></label>
                            </div>
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="form-floating">
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <label asp-for="CategoryId">Category</label>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-9 mb-3">
                            <div class="form-floating">
                                <input asp-for="Description" class="form-control" placeholder="Description" />
                                <label asp-for="Description"></label>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="form-floating">
                                <select asp-for="ItemTypeId" class="form-select" asp-items="ViewBag.ItemTypes">
                                    <option value="">-- Select Item Type --</option>
                                </select>
                                <label asp-for="ItemTypeId">Item Type</label>
                            </div>
                            <span asp-validation-for="ItemTypeId" class="text-danger"></span>
                        </div>



                        <div class="col-md-8 mb-3">
                            <label asp-for="ImageUrl" class="form-label">Image Upload</label>
                            <input type="file" name="ImageFile" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="ItemList" asp-controller="Home" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-x-circle me-1"></i> CANCEL
                        </a>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-check-circle me-1"></i> SAVE
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


