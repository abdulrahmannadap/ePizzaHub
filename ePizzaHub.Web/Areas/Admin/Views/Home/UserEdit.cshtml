@using ePizzaHub.Models
@model SignUpModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Edit User</h5>
        <a asp-action="UserList" class="btn btn-sm btn-outline-warning">
            <i class="bi bi-arrow-left-circle me-1"></i> 
        </a>
    </div>

    <div class="card-body">
        <form asp-action="UserEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="Full Name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Email address" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Update password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Mobile number" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Roles" class="form-label">Select Role</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
                        <select asp-for="Roles" class="form-select" asp-items="@(new SelectList(new[] { "User", "Admin" }))"></select>
                    </div>
                    <span asp-validation-for="Roles" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 gap-2">
                <a asp-action="UserList" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-x-circle me-1"></i> CANCEL
                </a>
                <button type="submit" class="btn btn-sm btn-primary ">
                    <i class="bi bi-save me-1"></i> UPDATE
                </button>
            </div>
        </form>
    </div>
</div>
