@using ePizzaHub.Core.Database.Entities
@model IEnumerable<User>

@{
    ViewData["Title"] = "User List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">User List</h5>
@*         <a asp-action="CreateUser" class="btn btn-sm btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New User
        </a> *@
    </div>
    <div class="card-body table-responsive">
        <table class="table dataTableMain table-bordered table-hover align-middle text-center" id="userTable">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Email Confirmed</th>
                    <th>Created Date</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7">No users found.</td>
                    </tr>
                }
                else
                {
                    int index = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>@user.CreatedDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                <a asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>


